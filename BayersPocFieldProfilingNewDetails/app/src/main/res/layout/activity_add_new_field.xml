<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rohit.bayerspocfieldprofilingnewdetails.AddNewField">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar1"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/button_addanewfield"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttondesign"
        android:backgroundTint="#00af50"
        android:drawableEnd="@drawable/plusicon"
        android:paddingRight="10dp"
        android:text="Add New Field"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#00af50"
        android:drawableStart="@drawable/weathericondefault"
        android:paddingLeft="5dp"
        android:paddingTop="12dp"
        android:text="Heavy rains predicted over next 48 hours"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttondesign"
        android:backgroundTint="#0390c5"
        android:drawableStart="@drawable/cropingcalicon"
        android:paddingLeft="5dp"
        android:text="Cropping Calendar"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button4_profitLoss"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttondesign"
        android:backgroundTint="#0390c5"
        android:drawableStart="@drawable/profitloss"
        android:paddingLeft="5dp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button3"
        android:layout_below="@+id/button_addanewfield"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_addanewfield"
        android:text="Village:"
        android:textColor="#447698"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_addanewfield"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/button4_profitLoss"
        android:text="Aroor"
        android:textColor="#447698"
        android:textSize="18sp" />
</RelativeLayout>
